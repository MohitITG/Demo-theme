
<div class="review_section_outer">
  <div class="review_section_inner">
    
    {% if section.settings.heading!=blank %}
      <h2>{{ section.settings.heading  }}</h2>
    {% endif %}

    <div class="all_reviews_container">
      {% for block in section.blocks %}
      <div class="single-review" >
        
        {% if block.settings.review_head!=blank %}
         <h4>{{ block.settings.review_head }}</h4>
        {% endif %}

        <div class="all_star_container">
      {% for i in (1..5) %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true" data-slot="icon" color="rgb(255, 194, 1)" style="width: 100%; height: 100%;"><path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z" clip-rule="evenodd"></path></svg>
      {% endfor %}
        </div>

        {% if block.settings.review_content!=blank %}
         <p>{{ block.settings.review_content }}</p>
        {% endif %}
        
      </div>
      {% endfor %}
    </div>
    
  </div>
</div>




{% schema %}
  {
    "name": "Review Section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }
    ],
    "blocks" : [
      {
        "type": "review",
        "name" : "Review",
        "settings": [
          {
            "type": "text",
            "id": "review_head",
            "label": "Heading"
          },
          {
            "type" : "text",
            "id" : "review_content",
            "label" : "Content"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Review Section"
      }
    ]
  }
{% endschema %}