<div class="cstm-icon-with-text">
 <div class="section-{{ section.id }}-padding ctm_icon_text">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="ctm_heading_index">{{ section.settings.heading }}</h2>
    {% endif %}
    <div class="ast_icon_txt icon_data_div"> 
      {% for block in section.blocks %}
         {% if block.settings.image != blank %}
            <div class="icon_data_list item"> 
            <a href="{{ block.settings.link }}">
              <div class="icon_data_image"> 
                <img src="{{ block.settings.image | img_url: 'master' }}" loading="lazy" alt="{{ block.settings.image.alt }}">
              </div>  
           {% if block.settings.title != blank %}
              <div class="icon_data_content"> 
                <p>{{ block.settings.title }}</p>           
              </div>
              {% endif %}
            </a>
            </div>
       {% endif %}
        {% endfor %}
     </div>
  </div>
</div>
</div>

{% schema %}
  {
    "name": "Icon With Text Section",
    "class": "section ast_icon-with-text",
    "settings": [
      {
       "type":"text",
       "id":"heading",
       "label":"Heading"
     }
    ],
  "blocks": [
    {
    "name": "Block",
    "type":"title",
    "settings": [
     {
       "type":"image_picker",
       "id":"image",
       "label":"Image"
     },
    {
       "type":"text",
       "id":"title",
       "label":"Title"
     },
    {
       "type":"url",
       "id":"link",
       "label":"Link"
     }
    ]
    }
  ], 
 "presets": [
   {
   "name": "Icon With Text Section"
   }
 ]
}
{% endschema %}

